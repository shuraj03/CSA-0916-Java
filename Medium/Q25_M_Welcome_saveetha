import java.util.Scanner;

public class Main {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);

        // Accepting the string from the user
        System.out.print("Enter a string: ");
        String inputString = scanner.nextLine();

        // i) Replace any word in the given string
        String replacedString = inputString.replace("Saveetha", "Manipal");
        System.out.println("After replacing 'Saveetha' with 'Manipal': " + replacedString);

        // ii) Find the length
        int length = inputString.length();
        System.out.println("Length of the string: " + length);

        // iii) Uppercase conversion
        String uppercaseString = inputString.toUpperCase();
        System.out.println("Uppercase conversion: " + uppercaseString);
    }
}
